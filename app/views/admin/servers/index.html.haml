    %th Name
    %th Commands

  - @items.each do |item|
    %tr
      %td= item.id
      %td
      -#= render "statuses", item: item
      %td
        = link_to "#{item.name}", admin_server_path(:id => item.id)
      %td
        =link_to checks_path(:server_id=>item.id) do
          Check

= paginate @items




